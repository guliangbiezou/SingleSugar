<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <la.tietie.singlesugar.view.Dots_View
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="@drawable/point_green_active"
        app:unchecked="@drawable/point_grey"
        app:left_margin="10"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        ></la.tietie.singlesugar.view.Dots_View>

    <Button
        android:id="@+id/bt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="开启品质生活"
        android:textColor="#afff"
        android:onClick="click"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/bt_welpage_shape"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:visibility="gone"
        />

</RelativeLayout>
