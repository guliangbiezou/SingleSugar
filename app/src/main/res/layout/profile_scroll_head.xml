<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_profile">

            <ImageView
                android:id="@+id/iv_pro_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ig_profile_photo_default"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_below="@id/iv_pro_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="未登陆"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/abc_ic_go"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_notification"
                android:drawableRight="@drawable/ic_chevron_alternative"
                android:paddingRight="10dp"
                android:gravity="left|center"
                android:text="   我的消息"/>
        </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#EFEFF4"/>

</LinearLayout>
